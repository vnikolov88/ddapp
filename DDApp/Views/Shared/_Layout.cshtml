<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DDApp 1.1</title>
    <environment names="Development">
        <link rel="stylesheet" href="~/css/fonts.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link rel="stylesheet" href="./app.css" />
        <link rel="stylesheet" href="./app.css" />
        <script src="~/js/gallery.js"></script>
    </environment>
    <environment names="Production,Stagging">
        <link rel="stylesheet" href="~/css/gallery.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link rel="stylesheet" href="~/css/fonts.css" />
        <link rel="stylesheet" href="./app.min.css" />
        <script src="~/js/gallery.js"></script>
    </environment>

    <environment names="Development">
        <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
        <script src="./app.js"></script>
    </environment>
    <environment names="Production,Stagging">
        <script src="https://cdn.jsdelivr.net/npm/vue"></script>
        <script src="./app.min.js"></script>
    </environment>
</head>

<body class="noselect">
    <nav id="navbar-1" class="navbar grid-container">
        <a id="dropbtn" class="dropbtn">
            <i class="fas fa-bars"></i>
        </a>

        <a class="navbar-brand" href="Page1">
            <img src="@Model.AppLogo" alt="App logo" />
        </a>
        <a class="iconCircle" href="@DDApp.Extensions.StringExtensions.OnDeviceCall(Model.AppQuickCallNumber)">@Model.AppQuickCallNumberText<i class="@Model.AppQuickCallNumberIcon"></i></a>
        <div id="loading-indicator"><div class="loader"></div></div>
    </nav>
    <div class="dropdown">
        <div id="NavMenu" class="dropdown-content" style="display:none;">
            @foreach (var navigationLink in Model.Navigation ?? Enumerable.Empty<KeyValuePair<string, string>>())
            {
            <a href="@navigationLink.Value">@navigationLink.Key</a>
            }
        </div>
    </div>

    <main>
        @RenderBody()
    </main>
    <script src="~/js/page-load.js" type="module"></script>
    <script src="~/js/nugget.js" type="module"></script>
    <script src="~/js/nav-bar.js" type="module"></script>
</body>
</html>
